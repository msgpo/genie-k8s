# -*- mode: yaml -*-
apiVersion: batch/v1
kind: Job
metadata:
  name: @@JOB_NAME@@
  namespace: research
  labels:
    app: genie-toolkit
    owner: @@OWNER@@
    job_type: train

spec:
  completions: 1
  parallelism: 1
  backoffLimit: 0

  template:
    metadata:
      namespace: research
      labels:
        app: genie-toolkit
        owner: @@OWNER@@
        job_type: train
      annotations:
        iam.amazonaws.com/role: @@IAM_ROLE@@

    spec:
      nodeSelector:
        beta.kubernetes.io/instance-type: p3.2xlarge
      restartPolicy: Never
      containers:
      - name: main
        image: @@IMAGE@@
        imagePullPolicy: Always
        command:
          - /opt/genie-toolkit/train-job.sh
          - '@@OWNER@@'
          - '@@experiment@@'
          - '@@dataset@@'
          - '@@model@@'
        volumeMounts:
          - mountPath: /home/genie-toolkit
            name: train-volume
        resources:
          limits:
            cpu: 3
            memory: 10G
            nvidia.com/gpu: 1
          requests:
            cpu: 2
      - name: tensorboard
        image: tensorflow/tensorflow:latest
        imagePullPolicy: IfNotPresent
        command:
          - tensorboard
        args:
          - --logdir
          - /home/genie-toolkit/current
          - --host
          - 0.0.0.0
        volumeMounts:
          - mountPath: /home/genie-toolkit
            name: train-volume
        ports:
          - containerPort: 6006
            name: tensorboard
        readinessProbe:
          httpGet:
            port: 6006
            path: /
      volumes:
      - name: train-volume
        emptyDir: {}
      tolerations:
      - key: nvidia.com/gpu
        operator: Exists
        effect: NoSchedule
