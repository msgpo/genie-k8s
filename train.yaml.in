# -*- mode: yaml -*-
apiVersion: batch/v1
kind: Job
metadata:
  name: @@JOB_NAME@@
  namespace: research
  labels:
    app: genie-toolkit
    owner: @@OWNER@@
    job-type: train

spec:
  completions: 1
  parallelism: 1
  backoffLimit: 0

  template:
    metadata:
      namespace: research
      labels:
        app: genie-toolkit
        owner: @@OWNER@@
        job-type: train
      annotations:
        iam.amazonaws.com/role: @@IAM_ROLE@@

    spec:
      restartPolicy: Never
      containers:
      - name: main
        image: @@IMAGE@@
        imagePullPolicy: Always
        command: ['/bin/sh', '-c', '/opt/genie-toolkit/train-job.sh @@cmdline@@']
        volumeMounts:
          - name: tensorboard
            mountPath: /shared/tensorboard
        resources:
          limits:
            cpu: 8
            memory: 55G
            nvidia.com/gpu: @@GPU_NUM@@
          requests:
            cpu: 4
      nodeSelector:
        beta.kubernetes.io/instance-type: @@GPU_TYPE@@
      volumes:
      - name: tensorboard
        persistentVolumeClaim:
          claimName: tensorboard
      tolerations:
      - key: nvidia.com/gpu
        operator: Exists
        effect: NoSchedule
