# -*- mode: yaml -*-
apiVersion: batch/v1
kind: Job
metadata:
  name: @@JOB_NAME@@
  namespace: research
  labels:
    app: genie-toolkit
    owner: @@OWNER@@
    job-type: transformers

spec:
  completions: 1
  parallelism: 1
  backoffLimit: 0

  template:
    metadata:
      namespace: research
      labels:
        app: genie-toolkit
        owner: @@OWNER@@
        job-type: transformers
    spec:
      serviceAccountName: research-pod
      securityContext:
        fsGroup: 1000
      restartPolicy: Never
      containers:
      - name: main
        image: @@IMAGE@@
        imagePullPolicy: Always
        command: ['/bin/sh', '-c', '/opt/genie-toolkit/transformers-job.sh @@cmdline@@']
        resources:
          limits:
            cpu: 7.5
            memory: 56G
            nvidia.com/gpu: @@GPU_NUM@@
            ephemeral-storage: 40G
          requests:
            cpu: 7.5
            memory: 56G
            nvidia.com/gpu: @@GPU_NUM@@
            ephemeral-storage: 40G
      nodeSelector:
        beta.kubernetes.io/instance-type: @@GPU_TYPE@@
      tolerations:
      - key: nvidia.com/gpu
        operator: Exists
        effect: NoSchedule