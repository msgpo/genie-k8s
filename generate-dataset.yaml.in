# -*- mode: yaml -*-
apiVersion: batch/v1
kind: Job
metadata:
  name: @@JOB_NAME@@
  namespace: research
  labels:
    app: genie-toolkit
    owner: @@OWNER@@
    job-type: gen-dataset

spec:
  completions: 1
  parallelism: 1
  backoffLimit: 0

  template:
    metadata:
      namespace: research
      labels:
        app: genie-toolkit
        owner: @@OWNER@@
        job-type: gen-dataset
      annotations:
        iam.amazonaws.com/role: @@IAM_ROLE@@

    spec:
      nodeSelector:
        beta.kubernetes.io/instance-type: m5.4xlarge
      restartPolicy: Never
      containers:
      - name: main
        image: @@IMAGE@@
        imagePullPolicy: Always
        command: ['/bin/sh', '-c', '/opt/genie-toolkit/generate-dataset-job.sh @@cmdline@@']
        resources:
          limits:
            cpu: 15.5
            memory: 55Gi
            ephemeral-storage: 75G
          requests:
            cpu: 15.5
            memory: 55Gi
            ephemeral-storage: 75G
      tolerations: []
