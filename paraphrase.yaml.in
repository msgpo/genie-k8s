# -*- mode: yaml -*-
apiVersion: batch/v1
kind: Job
metadata:
  name: @@JOB_NAME@@
  namespace: research
  labels:
    app: genie-toolkit
    owner: @@OWNER@@
    job-type: paraphrase

spec:
  completions: 1
  parallelism: 1
  backoffLimit: 0

  template:
    metadata:
      namespace: research
      labels:
        app: genie-toolkit
        owner: @@OWNER@@
        job-type: paraphrase
      annotations:
        iam.amazonaws.com/role: @@IAM_ROLE@@

    spec:
      nodeSelector:
        beta.kubernetes.io/instance-type: p3.8xlarge
      restartPolicy: Never
      containers:
      - name: main
        image: @@IMAGE@@
        imagePullPolicy: Always
        command: ['/bin/sh', '-c', '/opt/genie-toolkit/paraphrase-job.sh @@cmdline@@']
        resources:
          limits:
            cpu: 31
            memory: 220G
            nvidia.com/gpu: 4
            ephemeral-storage: 80G
          requests:
            cpu: 31
            memory: 220G
            nvidia.com/gpu: 4
            ephemeral-storage: 80G
      tolerations:
      - key: nvidia.com/gpu
        operator: Exists
        effect: NoSchedule
