# -*- mode: yaml -*-
apiVersion: batch/v1
kind: Job
metadata:
  name: @@JOB_NAME@@
  namespace: research
  labels:
    app: genie-toolkit
    owner: @@OWNER@@
    job-type: evaluate

spec:
  completions: 1
  parallelism: 1
  backoffLimit: 0

  template:
    metadata:
      namespace: research
      labels:
        app: genie-toolkit
        owner: @@OWNER@@
        job-type: evaluate
      annotations:
        iam.amazonaws.com/role: @@IAM_ROLE@@

    spec:
      restartPolicy: Never
      containers:
      - name: main
        image: @@IMAGE@@
        imagePullPolicy: Always
        command: ['/bin/sh', '-c', '/opt/genie-toolkit/evaluate-job.sh @@cmdline@@']
        resources:
          limits:
            cpu: 4
            memory: 15G
          requests:
            cpu: 3
            memory: 15G
      tolerations: []
