# -*- mode: yaml -*-
apiVersion: batch/v1
kind: Job
metadata:
  name: @@JOB_NAME@@
  namespace: research
  labels:
    app: genie-toolkit
    owner: @@OWNER@@
    job_type: evaluate

spec:
  completions: 1
  parallelism: 1
  backoffLimit: 0

  template:
    metadata:
      namespace: research
      labels:
        app: genie-toolkit
        owner: @@OWNER@@
        job_type: evaluate
      annotations:
        iam.amazonaws.com/role: @@IAM_ROLE@@

    spec:
      restartPolicy: Never
      containers:
      - name: main
        image: @@IMAGE@@
        imagePullPolicy: Always
        command:
          - /opt/genie-toolkit/evaluate-job.sh
          - '@@OWNER@@'
          - '@@experiment@@'
          - '@@dataset@@'
          - '@@model@@'
        resources:
          limits:
            cpu: 4
            memory: 10G
          requests:
            cpu: 3
            memory: 10G
      tolerations: []
